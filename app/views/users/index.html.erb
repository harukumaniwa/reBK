<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "layouts/form" %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @post_users.each do |post_user| %>
            <tr>
              <td><%= attachment_image_tag post_user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %></td>
              <td><%= post_user.name %></td>
              <td><%= link_to "Show", user_path(post_user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>