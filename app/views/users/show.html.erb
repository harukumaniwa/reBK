<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "layouts/form" %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |b| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
              <% end %>
            </td>
            <td>
              <%= link_to b.title, book_path(id: b.id) %>
            </td>
            <td><%= b.body %></td>
            
            <% if b.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(b), method: :delete, class: "fas fa-heart", style: "color: red;" do %>
                  <%= b.favorites.count %>
                <% end %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(b), method: :post, class: "far fa-heart" do %>
                  <%= b.favorites.count %>
                <% end %>
              </td>
            <% end %>
            <td>
              コメント数: <%= b.book_comments.count %>
            </td>
            
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>