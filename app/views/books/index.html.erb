<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <div id="error_explanation" style="color: red;">
      <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "layouts/form" %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @post_books.each do |pb| %>
            <tr>
              <td>
                <%= link_to user_path(pb.user_id) do %>
                  <%= attachment_image_tag User.find(pb.user_id), :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
                <% end %>
              </td>
              <td><%= link_to pb.title, book_path(pb.id) %> </td>
              <td><%= pb.body %></td>
              <% if pb.favorited_by?(current_user) %>
                <td>
                  <%= link_to book_favorites_path(pb.id), style:"color: red;", method: :delete do %>
                    <i class="fas fa-heart"></i> <%= Favorite.where(book_id: pb.id).count %>
                  <% end %>
                </td>
              <% else %>
                <td>
                  <%= link_to book_favorites_path(pb.id), method: :post do %>
                    <i class="far fa-heart"></i> <%= Favorite.where(book_id: pb.id).count %>
                  <% end %>
                </td>
              <% end %>
              <td>コメント数: カウント</td>
            </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
</div>